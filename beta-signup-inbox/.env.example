# Sema webhook secret (from your inbox settings)
SEMA_WEBHOOK_SECRET=whsec_...

# Sema API key and inbox ID (for the /signup endpoint)
SEMA_API_KEY=sema_...
SEMA_INBOX_ID=your-inbox-uuid
# SEMA_BASE_URL=https://dev-api.withsema.com

# Resend API key
RESEND_API_KEY=re_...

# From-address for replies
RESEND_FROM_EMAIL=beta@out.withsema.com

# Reply-To header (default: beta@dev-in.withsema.com so replies go to the inbox)
# RESEND_REPLY_TO=beta@dev-in.withsema.com

# Cal.com booking link included in the reply
# CALCOM_LINK=https://cal.com/alex-gibson/sema-beta-access

# --- Image generation (optional) ---
# Set to "true" to generate a unique AI welcome image in each reply
# GENERATE_IMAGE=true

# Google API key for Gemini image generation
# GOOGLE_API_KEY=AIza...

# S3 bucket and prefix for hosting generated images
# S3_BUCKET=your-bucket-name
# S3_PREFIX=beta-welcome
# S3_REGION=us-east-1

# Enable the /test dev endpoint (GET /test?email=you@example.com)
# Never set this in production
# DEV_MODE=true
